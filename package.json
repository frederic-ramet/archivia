{
  "name": "archivia",
  "version": "0.1.0",
  "private": true,
  "description": "Plateforme de préservation et valorisation du patrimoine",
  "scripts": {
    "dev": "pnpm --filter @archivia/web dev",
    "build": "pnpm --filter @archivia/web build",
    "start": "pnpm --filter @archivia/web start",
    "lint": "pnpm -r lint",
    "type-check": "pnpm -r type-check",
    "clean": "pnpm -r clean",
    "db:generate": "pnpm --filter @archivia/database generate",
    "db:push": "pnpm --filter @archivia/database push",
    "db:migrate": "pnpm --filter @archivia/database migrate",
    "db:seed": "pnpm --filter @archivia/database seed",
    "test": "pnpm --filter @archivia/web test",
    "test:watch": "pnpm --filter @archivia/web test:watch",
    "test:opale": "pnpm --filter @archivia/database test:opale",
    "test:api": "./scripts/test-api.sh"
  },
  "keywords": [
    "heritage",
    "patrimoine",
    "archive",
    "ocr",
    "semantic-search"
  ],
  "author": "Frédéric Ramet",
  "license": "MIT"
}
